pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        
        stage('Test') {
            steps {
                sh 'pytest'
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'python3 app.py'
            }
        }
    }
    
    post {
        success {
            emailext (
                subject: 'Build Success',
                body: 'The build process succeeded.',
                to: 'saiganesh7989@gmail.com'
            )
        }
        
        failure {
            emailext (
                subject: 'Build Failure',
                body: 'The build process failed.',
                to: 'saiganesh7989@gmail.com'
            )
        }
    }
}
